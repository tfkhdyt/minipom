{
	"name": "minipom",
	"version": "0.11.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check ./src/**/*.{ts,svelte} && eslint --fix ./src/**/*.{ts,svelte}",
		"format": "prettier --write ./src/**/*.{ts,svelte}",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"prettier --check",
			"eslint",
			"pnpm check"
		]
	},
	"devDependencies": {
		"@fontsource-variable/montserrat": "^5.2.6",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.31.1",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@tauri-apps/api": "^2.7.0",
		"@tauri-apps/cli": "^2.7.1",
		"@tauri-apps/plugin-dialog": "~2.0.2",
		"@tauri-apps/plugin-fs": "~2.0.4",
		"@tauri-apps/plugin-notification": "~2.2.3",
		"@tauri-apps/plugin-process": "~2.2.2",
		"@types/eslint": "^8.56.12",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"autoprefixer": "^10.4.21",
		"bits-ui": "^0.21.16",
		"clsx": "^2.1.1",
		"date-fns": "^3.6.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-svelte": "^2.46.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"lucide-svelte": "^0.368.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^4.2.20",
		"svelte-check": "^3.8.6",
		"svelte-dnd-action": "^0.9.64",
		"svelte-eslint-parser": "^0.34.1",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.17",
		"ts-pattern": "^5.8.0",
		"typescript": "^5.9.2",
		"vite": "^5.4.19"
	},
	"type": "module",
	"knip": {
		"$schema": "https://unpkg.com/knip@5/schema.json",
		"svelte": true,
		"vite": false
	}
}
